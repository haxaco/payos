{
  "name": "@sly/mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server for Sly - enables Claude Desktop integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sly-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --shims",
    "dev": "tsup src/index.ts --format esm --dts --watch --shims",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@sly/sdk": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "sly",
    "payments",
    "ai"
  ]
}

