{
  "name": "@payos/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "INTEGRATION=true vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "seed:db": "tsx scripts/seed-database.ts",
    "seed:all": "tsx scripts/seed-all.ts",
    "seed:streams": "tsx scripts/seed-streams.ts",
    "seed:agents": "tsx scripts/seed-agent-activity.ts",
    "seed:enhance": "tsx scripts/enhance-seed-data.ts",
    "seed:comprehensive": "tsx scripts/seed-enhanced-comprehensive.ts",
    "seed:power-user": "tsx scripts/seed-power-user.ts",
    "update:corridor-ids": "tsx scripts/update-transfers-corridor-id.ts",
    "check:rls": "tsx scripts/check-rls-in-migrations.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@payos/types": "workspace:*",
    "@payos/utils": "workspace:*",
    "@supabase/supabase-js": "^2.47.10",
    "dotenv": "^17.2.3",
    "hono": "^4.6.14",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "supertest": "^7.1.4",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  }
}
