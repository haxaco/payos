{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "apps/api/**",
      "packages/**",
      "package.json",
      "pnpm-lock.yaml",
      "pnpm-workspace.yaml",
      "nixpacks.toml",
      "railway.json",
      "turbo.json"
    ]
  },
  "deploy": {
    "startCommand": "node apps/api/dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
}

